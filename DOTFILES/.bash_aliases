# Change directory
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'

## Colorize grep
alias grep='grep --color=auto'

# Vi = Vim
alias vi=vim

# Netstat
alias openports='netstat -tulanp'

# Apt Upgrade
alias upgrade='sudo apt-get update && sudo apt-get upgrade'

# Applications
alias chrome='/usr/bin/google-chrome'
alias ff='/usr/bin/firefox'
